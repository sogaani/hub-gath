  "repository": {
    "type": "git",
    "url": "https://github.com/sogaani/mozassist.git"
  },
  "bugs": {
    "url": "https://github.com/sogaani/mozassist/issues"
  },
  "dependencies": {
    "bower": "^1.8.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "firebase-admin": "^5.11.0",
    "googleapis": "^31.0.2",
    "morgan": "^1.9.0",
    "ngrok": "^2.2.26",
    "node-fetch": "^1.6.3",
    "polymer-cli": "^1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.0",
    "eslint-plugin-html": "^4.0.2"
